[core]
excludesfile = ~/.gitignore_global
autocrlf = input

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = red reverse
local = blue
remote = green

[color "diff"]
meta = yellow
frag = magenta
old = red bold
new = green
plain = white

[color "status"]
added = yellow
changed = green
untracked = cyan

[alias]
s = status -s
l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[includeIf "gitdir:~/Workspace/reply/"]
path = .gitconfig-work
[includeIf "gitdir:~/Workspace/civa86/"]
path = .gitconfig-personal
[includeIf "gitdir:~/dotfiles/"]
path = .gitconfig-personal

[merge]
tool = vscode
[mergetool "vscode"]
cmd = code --wait $MERGED

[diff]
tool = vscode
[difftool "vscode"]
cmd = code --wait --diff $LOCAL $REMOTE
[credential]
helper = osxkeychain
[pull]
rebase = false
ff = true
[fetch]
prune = true
